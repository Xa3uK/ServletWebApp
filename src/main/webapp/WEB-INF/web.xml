<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Servlets Tutorial</display-name>

    <servlet>
        <servlet-name>sendmail</servlet-name>
        <servlet-class>net.servlet.appservlets.SendMailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sendmail</servlet-name>
        <url-pattern>/sendmail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDepartment</servlet-name>
        <servlet-class>net.servlet.appservlets.departmentservlets.AddDepartmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDepartment</servlet-name>
        <url-pattern>/addDepartment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addEmployee</servlet-name>
        <servlet-class>net.servlet.appservlets.employeeservlets.AddEmployeeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addEmployee</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteEmployee</servlet-name>
        <servlet-class>net.servlet.appservlets.employeeservlets.DeleteEmployeeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteEmployee</servlet-name>
        <url-pattern>/deleteEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDepartment</servlet-name>
        <servlet-class>net.servlet.appservlets.departmentservlets.DeleteDepartmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteDepartment</servlet-name>
        <url-pattern>/deleteDepartment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listEmployee</servlet-name>
        <servlet-class>net.servlet.appservlets.employeeservlets.EmployeeListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listEmployee</servlet-name>
        <url-pattern>/listEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listDepartment</servlet-name>
        <servlet-class>net.servlet.appservlets.departmentservlets.DepartmentListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listDepartment</servlet-name>
        <url-pattern>/listDepartment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateEmployee</servlet-name>
        <servlet-class>net.servlet.appservlets.employeeservlets.UpdateEmployeeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updateEmployee</servlet-name>
        <url-pattern>/updateEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateDepartment</servlet-name>
        <servlet-class>net.servlet.appservlets.departmentservlets.UpdateDepartmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updateDepartment</servlet-name>
        <url-pattern>/updateDepartment</url-pattern>
    </servlet-mapping>

</web-app>